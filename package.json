{
  "name": "hugo-grochau-com",
  "version": "1.0.0",
  "description": "Hugo Grochau's personal website deployed on Cloudflare Workers",
  "main": "worker.js",
  "scripts": {
    "dev": "hugo server --buildDrafts --buildFuture",
    "dev:worker": "wrangler dev",
    "build": "hugo --minify",
    "build:staging": "hugo --environment staging --minify",
    "deploy": "wrangler publish",
    "deploy:staging": "wrangler publish --env staging",
    "build:deploy": "npm run build && npm run deploy",
    "build:deploy:staging": "npm run build:staging && npm run deploy:staging",
    "setup": "./setup.sh",
    "clean": "rm -rf public/ .wrangler/"
  },
  "keywords": ["hugo", "cloudflare", "workers", "static-site"],
  "author": "Hugo Grochau",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0"
  }
}
